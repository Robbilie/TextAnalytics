<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <name>GoldSentences</name>
  <description>Little workaround for multilane pipelines</description>
  <version/>
  <vendor/>
  <types>
    <typeDescription>
      <name>de.unidue.langtech.teaching.pp.type.GoldSentences</name>
      <description/>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>id</name>
          <description>Dataset ID</description>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>firstSentence</name>
          <description/>
          <rangeTypeName>de.unidue.langtech.teaching.pp.type.GoldSentence</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>secondSentence</name>
          <description/>
          <rangeTypeName>de.unidue.langtech.teaching.pp.type.GoldSentence</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>similarity</name>
          <description/>
          <rangeTypeName>uima.cas.Float</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>scores</name>
          <description/>
          <rangeTypeName>uima.cas.FSArray</rangeTypeName>
          <elementType>de.unidue.langtech.teaching.pp.type.GoldScore</elementType>
        </featureDescription>
      </features>
    </typeDescription>
  	<typeDescription>
      <name>de.unidue.langtech.teaching.pp.type.GoldSentence</name>
      <description/>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    	<features>
        <featureDescription>
          <name>sentence</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>length</name>
          <description/>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>words</name>
          <description/>
          <rangeTypeName>uima.cas.StringArray</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>wordCount</name>
          <description/>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  <typeDescription>
      <name>de.unidue.langtech.teaching.pp.type.GoldScore</name>
      <description/>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>name</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>score</name>
          <description/>
          <rangeTypeName>uima.cas.Float</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  </types>
</typeSystemDescription>
